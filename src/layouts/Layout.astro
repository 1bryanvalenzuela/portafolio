---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import "../styles/global.css";

import "@fontsource-variable/ubuntu-sans-mono";
import "@fontsource-variable/ubuntu-sans";

const { language } = Astro.props;
---

<!doctype html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {
        language == "es"
          ? "Bryan Valenzuela | Análisis de datos y desarrollo web"
          : "Bryan Valenzuela | Data analysis and web development"
      }
    </title>
    <meta
      name="description"
      content={language == "es"
        ? "Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones. Puedo ayudarte entregando servicios de análisis de datos, desarrollo web y consultoria para mejorar tus procesos de negocio."
        : "Data management and programming specialist, bringing support to decision making. Can help you by providing data analysis, web development and consulting services to improve your business processes."}
    />
    <link rel="canonical" href="https://www.bryanvalenzuela.dev" />
    <meta property="og:title" content="Bryan Valenzuela" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.bryanvalenzuela.dev" />
    <meta
      property="og:image"
      content={language == "es" ? "/bvesimage.jpg" : "/bvenimage.jpg"}
    />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:description"
      content={language == "es"
        ? "Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones."
        : "Data management and programming specialist, bringing support to decision making."}
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Bryan Valenzuela" />
    <meta
      name="twitter:description"
      content={language == "es"
        ? "Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones."
        : "Data management and programming specialist, bringing support to decision making."}
    />
    <meta
      name="twitter:image"
      content={language == "es" ? "/bvesimage.jpg" : "/bvenimage.jpg"}
    />
  </head>
  <body>
    <Header language={language} />
    <slot />
    <Footer language={language} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #f8f1ee;
  }
</style>
