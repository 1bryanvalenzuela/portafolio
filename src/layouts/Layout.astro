---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import "../styles/global.css";
import "@fontsource-variable/ubuntu-sans-mono";
import "@fontsource-variable/ubuntu-sans";

const { language } = Astro.props;
const cookies = Astro.cookies;

const themeCookies = cookies.get("theme");
let Theme = "";
if (themeCookies) {
  Theme = themeCookies.value;
}
---

<!doctype html>
<html class={Theme} lang={language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {
        language == "es"
          ? "Bryan Valenzuela | Análisis de datos y desarrollo web"
          : "Bryan Valenzuela | Data analysis and web development"
      }
    </title>
    <meta
      name="description"
      content={language == "es"
        ? "Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones. Puedo ayudarte entregando servicios de análisis de datos, desarrollo web y consultoria para mejorar tus procesos de negocio."
        : "Data management and programming specialist, bringing support to decision making. Can help you by providing data analysis, web development and consulting services to improve your business processes."}
    />
    <link
      rel="canonical"
      href={language === "es"
        ? "https://www.bryanvalenzuela.dev"
        : "https://www.bryanvalenzuela.dev/en"}
    />
    <meta
      property="og:title"
      content={language == "es"
        ? "Bryan Valenzuela | Análisis de datos y desarrollo web"
        : "Bryan Valenzuela | Data analysis and web development"}
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={language === "es"
        ? "https://www.bryanvalenzuela.dev"
        : "https://www.bryanvalenzuela.dev/en"}
    />

    <meta
      property="og:image:secure-url"
      itemprop="image"
      content={language == "es"
        ? "https://www.bryanvalenzuela.dev/bvesimage.jpg"
        : "https://www.bryanvalenzuela.dev/bvenimage.jpg"}
    />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta
      name="image"
      property="og:image"
      content={language == "es"
        ? "https://www.bryanvalenzuela.dev/bvesimage.jpg"
        : "https://www.bryanvalenzuela.dev/bvenimage.jpg"}
    />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta
      property="og:image:secure-url"
      itemprop="image"
      content={language == "es"
        ? "https://www.bryanvalenzuela.dev/bvesimage300.jpg"
        : "https://www.bryanvalenzuela.dev/bvenimage.jpg300"}
    />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="400" />
    <meta property="og:image:height" content="300" />

    <meta
      property="og:description"
      content={language == "es"
        ? "Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones."
        : "Data management and programming specialist, bringing support to decision making."}
    />
    <meta name="author" content="Bryan Ignacio Valenzuela Cáceres" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content={language == "es"
        ? "Bryan Valenzuela | Análisis de datos y desarrollo web"
        : "Bryan Valenzuela | Data analysis and web development"}
    />
    <meta
      name="twitter:description"
      content={language == "es"
        ? "Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones."
        : "Data management and programming specialist, bringing support to decision making."}
    />
    <meta
      name="twitter:image"
      content={language == "es"
        ? "https://www.bryanvalenzuela.dev/bvesimage.jpg"
        : "https://www.bryanvalenzuela.dev/bvenimage.jpg"}
    />
  </head>
  <body>
    <Header language={language} theme={Theme} />
    <slot />
    <Footer language={language} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--primary-color);
  }
</style>
