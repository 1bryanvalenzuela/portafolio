---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import "../styles/global.css";

import "@fontsource-variable/ubuntu-sans-mono";
import "@fontsource-variable/ubuntu-sans";

const { language } = Astro.props;
---

<!doctype html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Bryan Valenzuela | Análisis de datos y desarrollo web</title>
    <meta
      name="description"
      content="Análisis de datos estadísticos, creación
        de bases de datos, desarrollo funcional y visual de sitios web, y
        servicios de consultoria para mejorar los procesos de negocio."
    />
    <link rel="canonical" href="https://www.bryanvalenzuela.dev" />
    <meta property="og:title" content="Bryan Valenzuela" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.bryanvalenzuela.dev" />
    <meta
      property="og:image"
      content="https://www.bryanvalenzuela.dev/ogimage.png"
    />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="800" />
    <meta property="og:image:height" content="420" />
    <meta
      property="og:description"
      content="Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones."
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Bryan Valenzuela" />
    <meta
      name="twitter:description"
      content="Especialista en tecnología y gestión de datos con el fin de brindar soporte a la toma de decisiones."
    />
    <meta
      name="twitter:image"
      content="https://www.bryanvalenzuela.dev/ogimage.png"
    />
  </head>
  <body>
    <Header language={language} />
    <slot />
    <Footer language={language} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #f8f1ee;
  }
</style>
