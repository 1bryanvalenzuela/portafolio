---
import img from "../assets/IMG2.webp";
---

<div
  class="relative flex flex-col h-[65vh] md:h-[55vh] items-center justify-center bg-secondary transition-bg shadow-bottom"
>
  <div class="absolute inset-0 overflow-hidden">
    <div class="jumbo absolute -inset-[10px] bg-secondary"></div>
  </div>
  <div class="absolute pt-[12vh] z-2">
    <div class="w-65 h-65 bg-primary rounded-full p-2.5 contenedor-style">
      <img
        src={img.src}
        alt="Imagen"
        class="w-full h-full rounded-full object-cover"
      />
    </div>
    <div class="flex justify-center text-center py-8">
      <h1 class="font-bold pe-2 text-xl text-green-950 ubuntu-mono-regular">
        Ocupado
      </h1>
      <span class="h-3 w-3 pointer-events-none mt-[4px]">
        <span
          class="animate-ping absolute inline-flex h-3 w-3 mt-1.5 rounded-full bg-red-500"
        ></span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"
        ></span>
      </span>
    </div>
  </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap");

  body {
    font-family: Inter, sans-serif;
  }

  @keyframes jumbo {
    from {
      background-position:
        50% 50%,
        50% 50%;
    }
    to {
      background-position:
        350% 50%,
        350% 50%;
    }
  }

  .jumbo {
    --stripesRegular: repeating-linear-gradient(
      100deg,
      #fff 0%,
      #fff 7%,
      transparent 10%,
      transparent 12%,
      #fff 16%
    );
    --stripesDark: repeating-linear-gradient(
      100deg,
      #000 0%,
      #000 7%,
      transparent 10%,
      transparent 12%,
      #000 16%
    );
    --rainbow: repeating-linear-gradient(
      100deg,
      #60a5fa 10%,
      #e879f9 15%,
      #60a5fa 20%,
      #5eead4 25%,
      #60a5fa 30%
    );
    --stripes: repeating-linear-gradient(
      100deg,
      #23601745 0%,
      #23601745 7%,
      transparent 10%,
      transparent 12%,
      #23601745 16%
    );
    --green: repeating-linear-gradient(
      100deg,
      #cfffcf60 10%,
      #7cff6b79 15%,
      #cfffcf60 20%,
      #38ff5940 25%,
      #cfffcf60 30%
    );
    background-image: var(--stripes), var(--green);
    background-size: 300%, 200%;
    background-position:
      50% 50%,
      50% 50%;
    pointer-events: none;
    mask-image: radial-gradient(
      ellipse at -20% 0%,
      black 50%,
      transparent 100%
    );
    filter: blur(10px) opacity(50%) saturate(200%);
  }

  .jumbo::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: var(--stripes), var(--green);
    background-size: 200%, 100%;
    animation: jumbo 60s linear infinite;
    background-attachment: fixed;
    mix-blend-mode: difference;
  }
</style>
