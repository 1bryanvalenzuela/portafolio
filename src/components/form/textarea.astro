---
const { id, label, placeholder } = Astro.props;
---

<div>
  <label for={id} class="block text-xs font-medium text-gray-600">{label}</label
  >
  <textarea
    id={id}
    class="w-full mt-1 ubuntu-regular rounded-md border-gray-200 shadow-sm bg-white resize-none py-1 px-2 text-sm focus:outline-none"
    rows={4}
    placeholder={placeholder}></textarea>
</div>
